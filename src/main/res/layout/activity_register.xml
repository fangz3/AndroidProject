<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <com.q42.android.scrollingimageview.ScrollingImageView
        android:id="@+id/scrollingImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:speed = "1dp"
        app:src="@drawable/startup">
    </com.q42.android.scrollingimageview.ScrollingImageView>

    <EditText
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/register_username"
        android:layout_alignParentTop="true"
        android:hint="Username"
        android:layout_alignLeft="@+id/register_confirm_password"
        android:layout_alignStart="@+id/register_confirm_password"
        android:layout_alignRight="@+id/register_confirm_password"
        android:layout_alignEnd="@+id/register_confirm_password" />



    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_password"
        android:hint="Password"
        android:layout_below="@+id/register_username"
        android:layout_alignRight="@+id/register_username"
        android:layout_alignEnd="@+id/register_username"
        android:layout_alignLeft="@+id/register_username"
        android:layout_alignStart="@+id/register_username" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/register_btn_cancel"
        android:textSize="20dp"
        android:background="#f71818"
        android:layout_below="@+id/register_btn_register"
        android:layout_alignLeft="@+id/register_btn_register"
        android:layout_alignStart="@+id/register_btn_register"
        android:layout_marginTop="10dp" />

    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_confirm_password"
        android:layout_below="@+id/register_password"
        android:layout_centerHorizontal="true"
        android:hint="Confirm Password" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/register_btn_register"
        android:textSize="20dp"
        android:background="#1cf718"
        android:layout_below="@+id/register_confirm_password"
        android:layout_alignLeft="@+id/register_confirm_password"
        android:layout_alignStart="@+id/register_confirm_password"
        android:layout_marginTop="20dp" />

</RelativeLayout>